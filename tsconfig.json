{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"lib": ["es5", "ESNext"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"ts-node": {
		"files": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
